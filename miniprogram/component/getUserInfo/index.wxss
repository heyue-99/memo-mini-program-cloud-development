.info-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .3);
}

.info-content {
  position: relative;
  width: 478rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
	flex-direction: column;
  justify-content: center;
  align-items: center;
}

.info-image {
  width: 100%;
  height: 421rpx;
}

.info-btn {
  background-image: url('https://sta-op.douyucdn.cn/dyfelocal/act/5b4867e38d592a7dea394d93/infobtn.png?timestamp=1547185574');
  width: 354rpx;
  height: 75rpx;
  margin-top: 74rpx;
  background-size: 100% 100%;
  background-color: transparent;
}

.info-btn:after {
  border: none;
}